                {
                    <a href='mailto:@contact.Email' target='_blank' title='Email: @contact.Email'><img src="~/img/icon-email.png" /></a>
                }*@

                                    </div>
                                    <div></div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
