<table id="society-directory" style="float:left">
    <thead>
        <tr>
            <th class="th-sm">Search By Name, City or State:</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model.Contacts)
        {
            <tr>
                <td>
                    <div class="container">
                        <div class="row"><div id="section-society-logo" class='@contact.LogoFileName.Replace(".jpg", "")' title="@contact.Title Logo"></div>
                            <div class="col-md-9" id="section-society-name">
                                
                                @contact.Title @contact.Locality @contact.AdminDistrict @contact.Region
                                <div class="row">
                                    <div class="col-md-6" id="section-society-links">

                                        @if (!String.IsNullOrEmpty(@contact.Facebook))
                                        {
                                            <a href='https://@contact.Facebook' target='_blank' title='Facebook: @contact.Title'><img src="~/images/icon-fb.png" /></a>
                                        }
                                        @if (!String.IsNullOrEmpty(@contact.HomePage))
                                        {
                                            <a href='https://@contact.HomePage' target='_blank' title='Home Page: @contact.HomePage'><img src="~/images/icon-home.jpg" /></a>
                                        }
                                        @*@if (!String.IsNullOrEmpty(@contact.HomePage))
                {
